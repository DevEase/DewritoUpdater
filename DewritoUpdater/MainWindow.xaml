                              RenderTransformOrigin="0.5,0.5">
                            <Line.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform />
                                    <SkewTransform />
                                    <RotateTransform Angle="1.685" />
                                    <TranslateTransform />
                                </TransformGroup>
                            </Line.RenderTransform>
                        </Line>
                    </Grid>
                </Border>

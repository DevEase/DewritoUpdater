                            <Setter Property="Background">
                                <Setter.Value>
                                    <SolidColorBrush Color="#FF214D75" Opacity="1" />
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="BorderBrush" Value="#FFB3DAFF" />
                                    <Setter Property="Background" Value="#FF567EA2" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <Border.Clip>
                        <GeometryGroup>
                            <!--This PathGeometry will cut RectangleGeometry, cut-off right top-->
                            <PathGeometry Figures="M0,0 L90,0 L110,20 L100,55 L0,55" />
                        </GeometryGroup>
                    </Border.Clip>
                    <Grid x:Name="gridSkip">
                        <Grid.Resources>
                            <Style TargetType="{x:Type Line}">
                                <Setter Property="Stroke" Value="#FF47A6FF" />
                                <Style.Triggers>
                                    <DataTrigger
                                        Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType={x:Type Grid}}}"
                                        Value="True">
                                        <Setter Property="Stroke" Value="#FFB3DAFF" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Resources>
